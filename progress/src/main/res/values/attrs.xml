<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="progress_max" format="integer"/>
    <attr name="progress_unreached_color" format="color"/>
    <attr name="progress_reached_color" format="color"/>
    <attr name="progress_animTime" format="integer"/>
    <attr name="progress_stroke_width" format="dimension"/>

    <declare-styleable name="HorizontalProgress">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" />
        <attr name="progress_animTime"/>

        <attr name="progress_unreached_color" />
        <attr name="progress_reached_color" />

        <attr name="progress_bar_height" format="dimension"/>

        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>
        <attr name="progress_stroke_width" />

        <attr name="progress_text_offset" format="dimension"/>

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="progress_mode" format="enum">
            <enum name="semiCircle" value="0"/>
            <enum name="fullCircle" value="1"/>
        </attr>

        <attr name="progress_max" />
        <attr name="progress_animTime"/>
        <attr name="progress_stroke_width" />
        <attr name="progress_reached_color" />
        <attr name="progress_unreached_color" />
        <attr name="progress_value_text_color" format="color"/>
        <attr name="progress_value_text_size" format="dimension"/>
        <attr name="progress_hint_color" format="color"/>
        <attr name="progress_hint_text_size" format="dimension"/>
        <attr name="progress_unit" format="string|reference"/>
        <attr name="progress_hint" format="string|reference"/>
        <attr name="text_Offset_Percent_In_Radius" format="float"/>
        <attr name="arcColors" format="color|reference"/>

    </declare-styleable>

    <declare-styleable name="NodeProgressView">
        <attr name="progress_max" />
        <attr name="progress_stroke_width" />
        <attr name="progress_stage" format="integer"/>
        <attr name="progress_radius" format="float"/>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference"/>
    </declare-styleable>
</resources>