<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="progressMax" format="integer"/>
    <attr name="progressUnreachedColor" format="color"/>
    <attr name="progressReachedColor" format="color"/>
    <attr name="progressAnimTime" format="integer"/>
    <attr name="progressStrokeWidth" format="dimension"/>

    <declare-styleable name="HorizontalProgress">
        <attr name="progressCurrent" format="integer"/>
        <attr name="progressMax" />
        <attr name="progressAnimTime"/>

        <attr name="progressUnreachedColor" />
        <attr name="progressReachedColor" />

        <attr name="progressBarHeight" format="dimension"/>

        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressTextColor" format="color"/>
        <attr name="progressStrokeWidth" />
        <attr name="progressCornerRadius" format="float"/>

        <attr name="progressTextOffset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="progressMode" format="enum">
            <enum name="semiCircle" value="0"/>
            <enum name="fullCircle" value="1"/>
        </attr>

        <attr name="progressMax" />
        <attr name="progressAnimTime"/>
        <attr name="progressStrokeWidth" />
        <attr name="progressReachedColor" />
        <attr name="progressUnreachedColor" />
        <attr name="progressValueTextColor" format="color"/>
        <attr name="progressValueTextSize" format="dimension"/>
        <attr name="progressHintColor" format="color"/>
        <attr name="progressHintTextSize" format="dimension"/>
        <attr name="progressUnit" format="string|reference"/>
        <attr name="progressHint" format="string|reference"/>
        <attr name="textOffsetPercentInRadius" format="float"/>
        <attr name="progressArcColors" format="color|reference"/>

    </declare-styleable>

    <declare-styleable name="NodeProgressView">
        <attr name="progressMax" />
        <attr name="progressStrokeWidth" />
        <attr name="progressStage" format="integer"/>
        <attr name="progressRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference"/>
    </declare-styleable>
</resources>